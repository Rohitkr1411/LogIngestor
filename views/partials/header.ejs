      <script>
        function insertLogs() {
            const enteredLogs = document.getElementById('enteredLogs').value;

            fetch('/insertData', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ enteredLogs })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                alert(data.message); // Display a message from the server
                window.location.href = '/logs'; 
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while inserting logs');
                window.location.href = '/logs'; 
            });
        }
    </script>
